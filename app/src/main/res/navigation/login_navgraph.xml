<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navgraph"
    app:startDestination="@id/loginFragment2">

    <fragment
        android:id="@+id/loginFragment2"
        android:name="com.example.ejerciciorecyclerview.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment2_to_signUpFragment2"
            app:destination="@id/signUpFragment2" />
        <action
            android:id="@+id/action_loginFragment2_to_clientActivity"
            app:destination="@id/clientActivity" />
        <action
            android:id="@+id/action_loginFragment2_to_prestadorActivity2"
            app:destination="@id/prestadorActivity2" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment2"
        android:name="com.example.ejerciciorecyclerview.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment2_to_clientActivity"
            app:destination="@id/clientActivity" />
        <action
            android:id="@+id/action_signUpFragment2_to_prestadorActivity2"
            app:destination="@id/prestadorActivity2" />
    </fragment>
    <activity
        android:id="@+id/clientActivity"
        android:name="com.example.ejerciciorecyclerview.activities.ClientActivity"
        android:label="activity_client"
        tools:layout="@layout/activity_client" />
    <activity
        android:id="@+id/prestadorActivity2"
        android:name="com.example.ejerciciorecyclerview.activities.PrestadorActivity"
        android:label="activity_prestador"
        tools:layout="@layout/activity_prestador" >
        <argument
            android:name="fullName"
            app:argType="string" />
    </activity>
</navigation>